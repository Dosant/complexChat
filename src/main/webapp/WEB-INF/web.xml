<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        version="3.1"
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <servlet-mapping>
        <servlet-name>ServletPostRequests</servlet-name>
        <url-pattern>/ServletPostRequests</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletPostRequests</servlet-name>
        <servlet-class>io.dosov.Controller.ServletPostRequests</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>ServletGetUserID</servlet-name>
        <url-pattern>/ServletGetUserID</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletGetUserID</servlet-name>
        <servlet-class>io.dosov.Controller.ServletGetUserID</servlet-class>
    </servlet>


    <error-page>
        <error-code>404</error-code>
        <location>/JSP/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>400</error-code>
        <location>/JSP/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/JSP/error.jsp</location>
    </error-page>


</web-app>